{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
    <h1>Edit Product</h1>
    {{dump(product.medias|length)}}
    {% for media in product.medias %}
        {{dump(media)}}
        <img src="{{ asset('uploads/medias/' ~ media.src) }}" alt="description" width="200"/>
    {% endfor %}
    {{ include('product/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_product_index') }}">back to list</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
